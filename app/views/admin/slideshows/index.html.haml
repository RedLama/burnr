#slideshow_index
  .panel.panel-default.new
    %h2= t('.create_title')
    = form_for [:admin, @slideshow] do |f|
      .form-group
        = f.label :picture, t('.picture_label')
        = f.file_field :picture
        .help-block= t('.picture_help')
      .form-group
        = f.label :url, t('.url_label')
        = f.text_field :url, placeholder: t('.url_placeholder'), class: "form-control"
      = f.submit t('.submit'), class: "btn btn-default"
  .panel.panel-default.list
    .row
      - @slideshows.each do |slideshow|
        .col-sm-6.col-md-4
          .thumbnail
            = image_tag slideshow.picture.url(:thumb)
            .caption
              %p= slideshow.url
              %p
                = link_to t('.delete'), admin_slideshow_url(slideshow), class: "btn btn-primary", role: "button", method: :delete
